@using North.Common
@using North.Data.Access
@inherits LayoutComponentBase

@inject ILogger _logger
@inject IHttpContextAccessor _accessor
@inject NavigationManager _navigationManager

<PageTitle>North</PageTitle>

<MudStack Spacing="0" id="action_bar">
    <ActionBar IsExpanded="@IsExpanded" OnNavMenuStateChanged="@OnNavMenuStateChanged" />
    <MudDivider />
</MudStack>
<MudStack Row id="container">
    <AuthorizeView>
        <Authorized>
            <NavMenu IsExpanded="@IsExpanded" Style="width:240px;" />
        </Authorized>
    </AuthorizeView>
    <MudStack class="d-flex mud-height-full mud-width-full">
        @Body
        <Footer Content="@GlobalValues.AppSettings.General.Footer" Style="width:100%;" />
    </MudStack>
</MudStack>

<style>
    #action_bar {
        height:50px;
    }

    #container {
        width:100%;
        position:absolute;
        top:50px;
        left:0;
        bottom:0;
    }
</style>