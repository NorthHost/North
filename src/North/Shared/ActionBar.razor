@using North.Common
@inject NavigationManager _navigationManager

<MudToolBar Style="@Style">
    <MudTooltip Text="@ExpandTooltip" Placement="Placement.Right">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" OnClick="@OnNavMenuStateChanged" DisableRipple Style="margin-left:-20px;" />
    </MudTooltip>
    <Title Text="@GlobalValues.AppSettings.Appearance.Name" Style="margin-left:10px; font-size:20px;" />
    <MudSpacer />
    <MudTooltip Text="通知">
        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
    </MudTooltip>
    <MudTooltip>
        <MudIconButton Icon="@Icons.Material.Outlined.ManageAccounts" OnClick="SignOut" />
    </MudTooltip>
</MudToolBar>