@using North.Common
@using North.RCL.Text

@inject IJSRuntime JS
@inject NavigationManager _nav

<MudToolBar Style="@Style">
    <MudTooltip Text="@ExpandTooltip" Placement="Placement.Right">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" OnClick="@OnNavMenuStateChanged" DisableRipple Style="margin-left:-20px;" />
    </MudTooltip>
    <TitleText Text="@GlobalValues.AppSettings.Appearance.Name" Style="margin-left:10px; font-size:22px;" />
    <MudSpacer />
    <MudTooltip Text="通知">
        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
    </MudTooltip>
    <MudTooltip Text="用 户">
        <MudIconButton Icon="@Icons.Material.Outlined.ManageAccounts" OnClick="@SignOut" />
    </MudTooltip>
    <MudTooltip Text="@ThemeSwitchTooltip">
        <MudIconButton Icon="@ThemeSwitchIcon" OnClick="@SwitchTheme" />
    </MudTooltip>
</MudToolBar>