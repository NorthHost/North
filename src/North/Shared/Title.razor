<font id="font_title" style=@Style>
    @Text
</font>

<style>
    #font_title {
        font-weight: 400;
        font-family: sans-serif;
        background: linear-gradient(to right, rgb(123, 194, 122) 0%, rgba(63, 174, 162) 50%, rgb(3, 154, 202) 80%);
        -webkit-background-clip: text;
        color: transparent;
    }
</style>

@code{
    [Parameter]
    public string Text { get; set; } = string.Empty;

    [Parameter]
    public string Style { get; set; } = string.Empty;
}