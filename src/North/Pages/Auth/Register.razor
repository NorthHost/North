@page "/register"

@using North.Common
@using North.Core.Services.Poster
@using North.Data.Access
@using North.RCL.Forms
@using North.RCL.Text

@inject IJSRuntime JS
@inject ILogger _logger
@inject IPoster _poster
@inject ISnackbar _snackbar
@inject OurDbContext _context
@inject NavigationManager _nav
@inject IHttpContextAccessor _accessor

<MudStack Class="d-flex justify-center align-center mud-width-full mud-height-full">
    <RegisterForm Model="@Model" Title="@GlobalValues.AppSettings.Appearance.Name"
                  OnRegister="@UserRegister" OnEnter="@EnterToRegister" OnAvatarUpload="@UploadAvatar" OnAvatarClear="@ClearAvatar"
                  RegisterRunning="@RegisterRunning"  LoginLink="login" />
</MudStack>

<style>
    body {
        background-image: url(@BackgroundImageUrl);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>